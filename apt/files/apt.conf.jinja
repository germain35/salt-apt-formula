  {% for k, v in value.items() -%}
  {{k}} "{{ v }}";
  {% endfor -%} };
  {%- elif value is list %}{
  {% for v in value -%}
  "{{ v }}";
  {% endfor -%} };
  {%- else %} "{{ value }}";{%- endif %}
{%- endfor %}
